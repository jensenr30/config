#!/usr/bin/env bash

r="$HOME/repos"

if [ $(pwd) = "$r/gittyup" ]; then
    if [[ -z "${DEBUG}" ]]; then
        echo "running gittyup Release"
        ./build/release/gittyup "$r/test-repo"
    else
        echo "running gittyup Debug"
        ./build/debug/gittyup "$r/test-repo"
    fi
elif [ $(pwd) = "$r/cli-visualizer" ]; then
    if [[ -z "${DEBUG}" ]]; then
        echo "running vis Release"
        ./build/vis
    else
        echo "TODO"
    fi
else
    echo "Your current working directory is not on the list!"
    echo "See $(realpath $0)"
fi
