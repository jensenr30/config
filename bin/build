#!/usr/bin/env bash

r="$HOME/repos"

if [ $(pwd) = "$r/gittyup" ]; then
    echo "building gittyup..."
    if test -z $DEBUG; then
        bear -- ninja -C build/release
    else
        bear -- ninja -C build/debug
    fi
elif [ $(pwd) = "$r/cli-visualizer" ]; then
    echo "building cli-visualizer..."
    ./build.sh
else
    echo "Your current working directory is not on the list!"
    echo "See $(realpath $0)"
fi

