#!/usr/bin/bash

set -e                                       # halt on errors

path="$HOME/nas/safe/pictures/screenshots"   # preferred destination
filename="$(date +%Y-%m-%d_%H.%M.%S).png"    #
import -window root "$filename"              # take the screenshot - save to ./
mv "$filename" "$path/$filename" || path=""  # attempt to move to destination folder
echo  "$path/$filename" | tee >(clipin)      # put the filename in the clipboard
